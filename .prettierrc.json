{
  "$schema": "https://schemastore.org/prettierrc.json",
  "tabWidth": 2,
  "printWidth": 120,
  "plugins": ["@shufo/prettier-plugin-blade"],
  "overrides": [
    {
      "files": ["*.blade.php"],
      "options": {
        "parser": "blade",
        "tabWidth": 2,
        "wrapAttributes": "auto",
        "wrapAttributesMinAttrs": 2,
        "sortTailwindcssClasses": true,
        "sortHtmlAttributes": "code-guide",
        "noPhpSyntaxCheck": false,
        "indentInnerHtml": true,
        "extraLiners": "",
        "trailingCommaPHP": true,
        "componentPrefix": "x-,livewire:",
        "phpVersion": "8.4"
      }
    },
    {
      "files": ["bun.lock"],
      "options": {
        "trailingComma": "none"
      }
    }
  ]
}
